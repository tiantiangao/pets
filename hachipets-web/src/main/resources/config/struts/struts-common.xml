<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="common" namespace="/" extends="default">
    
        <action name="sitemapAction" class="com.gtt.pets.web.action.common.SitemapAction">
            <result name="success" type="freemarker">/WEB-INF/pages/common/sitemap.ftl</result>
        </action>

        <action name="notFoundAction" class="com.gtt.pets.web.action.common.NotFoundAction">
            <result name="success" type="freemarker">/WEB-INF/pages/common/404.ftl</result>
        </action>

    </package>
</struts>